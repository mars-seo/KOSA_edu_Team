   <children>
      <BorderPane>
         <bottom>
            <BorderPane BorderPane.alignment="CENTER">
               <right>
                  <AnchorPane prefHeight="33.0" prefWidth="66.0" BorderPane.alignment="CENTER">
                     <children>
                        <ImageView fx:id="imgSound" fitHeight="20.0" fitWidth="20.0" layoutX="46.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/speaker.png" />
                           </image>
                        </ImageView>
                        <Slider fx:id="volumeSlider" layoutX="73.0" layoutY="12.0" prefHeight="14.0" prefWidth="74.0" />
                     </children>
                  </AnchorPane>
               </right>
               <center>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="previousBtn" mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/backward.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="pauseBtn" mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/pause.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="playBtn" mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/play.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="stopBtn" mnemonicParsing="false">
